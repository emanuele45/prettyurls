<?xml version="1.0"?>
<!DOCTYPE modification SYSTEM "http://www.simplemachines.org/xml/modification">

<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">
	<id>el:prettyurls</id>
	<version>0.8</version>

	<file name="$themedir/ManageBoards.template.php">
		<operation>
			<search position="after"><![CDATA[
			<td>
				<b>', $txt['full_name'], ':</b><br />
				<span class="smalltext">', $txt['name_on_display'], '</span><br />
			</td>
			<td valign="top" align="left">
				<input type="text" name="board_name" value="', $context['board']['name'], '" size="30" />
			</td>
		</tr>
		<tr valign="top" class="windowbg2">
]]></search>
			<add><![CDATA[
			<td>
				<b>', $txt['pretty']['url'], ':</b><br />
				', $txt['pretty']['url_desc'], '<br /><br />
			</td>
			<td valign="top" align="right">
				<input type="text" name="pretty_url" value="', (isset($context['board']['pretty_url']) ? $context['board']['pretty_url'] : ''), '" size="30" />
			</td>
		</tr>
		<tr valign="top" class="windowbg2">
]]></add>
		</operation>
	</file>

</modification>
