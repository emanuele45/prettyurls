 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>el:prettyurls</id>
	<version>0.8 for SMF 2.0</version>
	<name>Pretty URLs - Base</name>
	<type>modification</type>

	<install for="2.0 Beta 1, 2.0 Beta 1.1">
		<modification format="xml" type="file">Sources.xml</modification>
		<modification format="xml" type="file">BoardsAndTopics.xml</modification>
		<modification format="xml" type="file">Themes.xml</modification>
		<modification format="xml" type="file">Languages.xml</modification>
		<require-file name="PrettyUrls.php" destination="$sourcedir" />
		<require-file name="PrettyUrls-Filters.php" destination="$sourcedir" />
		<require-file name="Subs-PrettyUrls.php" destination="$sourcedir" />
		<require-file name="PrettyUrls.template.php" destination="$themedir" />
		<require-dir name="pretty" destination="$themedir" />
		<require-file name="PrettyUrls.english.php" destination="$languagedir" />
		<require-file name="PrettyUrls.french.php" destination="$languagedir" />
		<code type="file">install.php</code>
	</install>
	<uninstall for="2.0 Beta 1, 2.0 Beta 1.1">
		<modification format="xml" type="file" reverse="true">Sources.xml</modification>
		<modification format="xml" type="file" reverse="true">BoardsAndTopics.xml</modification>
		<modification format="xml" type="file" reverse="true">Themes.xml</modification>
		<modification format="xml" type="file" reverse="true">Languages.xml</modification>
		<remove-file name="$sourcedir/PrettyUrls.php" />
		<remove-file name="$sourcedir/PrettyUrls-Filters.php" />
		<remove-file name="$sourcedir/Subs-PrettyUrls.php" />
		<remove-file name="$themedir/PrettyUrls.template.php" />
		<remove-dir name="$themedir/pretty" />
		<remove-file name="$languagedir/PrettyUrls.english.php" />
		<remove-file name="$languagedir/PrettyUrls.french.php" />
		<code type="file">uninstall.php</code>
	</uninstall>

</package-info>
